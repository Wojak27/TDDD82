<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/contactsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:minWidth="200dp"
        android:text="@string/contactsButton" />

    <Button
        android:id="@+id/mapsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/contactsButton"
        android:layout_below="@+id/contactsButton"
        android:layout_marginTop="20dp"
        android:minWidth="200dp"
        android:text="@string/mapsButton" />

    <Button
        android:id="@+id/newsfeedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mapsButton"
        android:layout_below="@+id/mapsButton"
        android:layout_marginTop="20dp"
        android:minWidth="200dp"
        android:text="@string/newsfeedButton" />

    <Button
        android:id="@+id/reportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/newsfeedButton"
        android:layout_below="@+id/newsfeedButton"
        android:layout_marginTop="20dp"
        android:minWidth="200dp"
        android:text="@string/reportButton" />

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reportButton"
        android:layout_below="@+id/reportButton"
        android:layout_marginTop="20dp"
        android:minWidth="200dp"
        android:text="Search" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/logInButton"
        android:layout_below="@+id/logInButton"
        android:layout_marginTop="20dp"
        android:minWidth="200dp"
        android:text="@string/logOutButton" />

    <Button
        android:id="@+id/logInButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/searchButton"
        android:layout_alignStart="@+id/searchButton"
        android:layout_below="@+id/searchButton"
        android:layout_marginTop="20dp"
        android:text="Log in/change user" />
</RelativeLayout>