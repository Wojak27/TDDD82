<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/callButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/mapsButton"
        android:layout_below="@+id/mapsButton"
        android:layout_marginTop="39dp"
        android:minWidth="200dp"
        android:text="@string/callButton" />

    <Button
        android:id="@+id/mapsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/contactsButton"
        android:layout_below="@+id/contactsButton"
        android:layout_marginTop="34dp"
        android:minWidth="200dp"
        android:text="@string/mapsButton" />

    <Button
        android:id="@+id/contactsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:minWidth="200dp"
        android:text="@string/contactsAndMessagesButton" />

    <Button
        android:id="@+id/logOutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/callButton"
        android:layout_below="@+id/callButton"
        android:layout_marginTop="48dp"
        android:minWidth="200dp"
        android:text="@string/logOutButton" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logOutButton"
        android:layout_marginStart="45dp"
        android:layout_marginTop="50dp"
        android:text="Byt låg batteri gråns:" />

    <EditText
        android:id="@+id/batteryLimitEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/changeLowBatteryLevelLimitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/batteryLimitEditText"
        android:layout_toEndOf="@+id/batteryLimitEditText"
        android:text="Byt" />


</RelativeLayout>